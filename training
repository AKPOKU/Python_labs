## Define a function named say_hello
def say_hello():
    print("Hello, world!")  # Print a simple greeting message
# Define a function named add_two_numbers
def add_two_numbers(a, b):
    return a + b  # Return the sum of the two numbers
# Call the say_hello function
say_hello()
# Call the add_two_numbers function with 2 and 3
result = add_two_numbers(2, 3)
# Print the result of the add_two_numbers function
print("The sum of 2 and 3 is", result)    